<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    
    <title>Money Leak Free</title>
    
    <meta name="description" content="Your description">
    <meta name="keywords" content="Your,Keywords">
    <meta name="author" content="ResponsiveWebInc">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/template")

    <!-- Font awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Favicon -->
    <link rel="shortcut icon" href="img/favicon/favicon.png">
</head>

<body ng-app="moneyLeakFree" ng-controller="LoginController">

    <!-- Header -->

    <div class="fixedbar">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="logo">
                        <div class="pull-left">
                            <!-- Logo with font awesome icon. Replace it with your logo. Replace # with your site link -->
                            <h1><a href="#!/home"><i class="fa fa-pie-chart"></i> Beat the Coins</a></h1>
                        </div>
                        <div class="navi">
                            <div ng-hide="userIsLogedIn">
                                <div ng-include="'Scripts/App/Views/Shared/login.html'"></div>
                            </div>

                            <!-- Navigation Starts Here -->
                            <div ng-show="userIsLogedIn" ng-include="'Scripts/App/Views/Shared/headNavigationMenu.html'"></div>
                            <!--/ Navigation Ends Here -->

                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- End Header -->

    <!-- Main content -->

    <div class="main">
        <div class="container">
            <div class="row">
                <div class="visible-lg">
                    <div class="col-md-2 sidey">

                        <!-- Sidebar Starts Here -->
                        <div class="padd sidebar" ng-show="userIsLogedIn">
                            <!-- Each sidebar should be enclosed inside "widget class" -->
                            <!-- 1st widget -->
                            <div class="widget">
                                <!-- Sidebar heading enclosed inside h3. Don't forget to add the class "matopen". -->
                                <h3 class="matopen">Search</h3>
                                <!-- Sidebar content should be enclosed inside div with the class "matter". -->
                                <div class="matter">
                                    <!-- Search form -->
                                    <form class="form-inline">
                                        <input type="text" class="form-control" placeholder="Type to Search...">
                                    </form>
                                </div>
                            </div>
                            <!-- 2nd widget -->
                            <div class="widget">
                                <h3 class="matopen">Configuration</h3>
                                <div class="matter">
                                    <ul>
                                        <li class="menuItem"><a href="#!/configuration/expensegroups">Expense Groups</a></li>
                                        <li><a href="#">Home Page Reports</a></li>
                                    </ul>
                                </div>
                            </div>
                            <!-- 3rd widget -->
                            <div class="widget">
                                <h3 class="matopen">Expences</h3>
                                <div class="matter">
                                    <ul>
                                        <li><a href="#">Add Expense</a></li>
                                        <li><a href="#">Add Income</a></li>
                                        <li><a href="#">Last Expenses</a></li>
                                        <li><a href="#">Last Incomes</a></li>
                                        <li><a href="#">Last Movements</a></li>
                                        <li><a href="#">Find Movements</a></li>
                                    </ul>
                                </div>
                            </div>
                            <!-- 4th widget -->
                            <div class="widget">
                                <h3 class="matopen">Reports</h3>
                                <div class="matter">
                                    <ul>
                                        <li><a href="#">Favorite Reports</a></li>
                                        <li><a href="#">Generate Live Report</a></li>
                                        <li><a href="#">Configure New Report</a></li>
                                        <li><a href="#">See Reports List</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- Sidebar Ends Here -->

                    </div>
                </div>

                <div class="col-md-9">
                    <div class="whity content">
                        <div ng-hide="userIsLogedIn" ng-include="'Scripts/App/Views/Shared/indexNotLogedIntUser.html'"></div>

                        <div ng-show="userIsLogedIn">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- End Main content -->

    <!-- Footer -->

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Copyright information -->
                    <div class="fpadd">Copyright &copy; 2017 - <a href="#">Money Leaks Free</a> @*/ <a href="#">Disclaimer</a> / <a href="#">Privacy Policy</a>*@</div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </footer>

    <!-- End Footer -->

    <!-- Scroll to top -->
    <span class="totop"><a href="#"><i class="fa fa-angle-up"></i></a></span>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/template")

    @RenderSection("scripts", required: false)

</body>
</html>